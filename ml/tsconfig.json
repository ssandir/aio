{
  "compilerOptions": {
    "rootDir": "..",
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": [
      "node",
      "jest"
    ],
    "outDir": "./dist",
    "paths": {
      "@shared/*": ["../shared/*"],
      "@ml-shared/*": ["./shared/*"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx",
    "../shared/**/*.ts",
    "../shared/**/*.d.ts",
    "../shared/**/*.tsx",  
  ]
}
