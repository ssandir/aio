{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": [
      "node",
      "vuetify",
      "vite/client",
      "jest"
    ],
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["shared/*"],
      "@ml/*": ["ml/*"],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "vite.config.ts", 
    "shared/**/*.ts",
    "shared/**/*.d.ts",
    "shared/**/*.tsx",
    "ml/**/*.ts",
    "ml/**/*.d.ts",
    "ml/**/*.tsx",  
  ]
}
